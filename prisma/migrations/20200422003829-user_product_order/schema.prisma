datasource db {
  provider = "mysql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}


model Product {
  id          Int      @default(autoincrement()) @id
  name        String
  price       Float
  image       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
  orders      Order[]
}

model Order {
  id          Int      @default(autoincrement()) @id
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
  product     Product     @relation(fields: [productId], references: [id])
  productId   Int
  quantity    Int @default(1)
}

model User {
  id          Int @default(autoincrement()) @id
  email       String @unique
  password    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
}